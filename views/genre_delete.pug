extends layout

block content
    h1 #{title}: #{genre.name}

    if genres_books.length
        p #[string Delete the following book references to this genre before attempting to delete]

        div(style='margin-left:20px;margin-top:20px')

            h4 Books

            dl
            each book in genres_books
                dt 
                    a(href=book.url) #{book.title}
                dd #{book.summary}

    else
        p Do you really want to delete this genre?

        form(method='POST' action='')
            .form-group
                input#authorid.form-control(type='hidden',name='genreid',required='true',value=genre._id)
            button.btn.btn-primary(type='submit') Delete